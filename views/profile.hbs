</head>
<div class="d-flex flex-row">
    <img src="/images/avataruser.png" alt="avataruser" height="150px" width="150px">
    {{#with user}}
    <div class="userinfo">
        <div class="d-flex flex-columm d-flex align-items-center">
            <h1 class="username"> {{username}}</h1>
            <a data-target="#myModal" data-toggle="modal" href="#myModal">Chỉnh sửa</a>
            <div id="myModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title login100-form-title">Thay đổi tên tài khoản</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <form action="/users/profile/{{username}}" method="POST" id="updateProfileForm">
                                <div class="modal-body">
                                    <h5>Tên tài khoản mới:</h5><br>

                                    <div class="wrap-input100 validate-input" data-validate="Tên tài khoản bắt buộc">
                                        <input class="input100" type="text" name="username" placeholder="New Username">
                                        <span class="focus-input100"></span>
                                    </div><br>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" id="updateProfileBtn" class="btn btn-primary">
                                            Lưu
                                    </button>
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close
                                </div>
                             </form>
                        </div>
                </div>     
            </div>
        </div>
        <h5 class="gmail">{{email}}</h5>
    </div>
    {{/with}}
</div>

<hr>

<div>
    <h3 class="header_font">
        Sách đang mượn
    </h3>
    <div class="d-flex flex-column">
        <div class="d-flex flex-row book_item">
            <img class="img_book" src="/images/book.jpg">
            <div class="d-flex flex-column align-content-between">
                <div class="d-flex flex-column" style="height: 160px">
                    <h5 class="header_font">Sách gì đó</h5>
                    <p class="author_name">Nguyễn Hữu Tuấn</p>
                    <p>Tiếng Việt</p>
                </div>
    
                <div class="d-flex flex-column">
                    <span>
                        <button type="button" class="btn btn-primary">Mượn sách</button>
                    </span>
                    <a class="read_more">Xem thêm</a>
                </div>
            </div>
        </div>
    </div>
</div>

<hr>

<div>
    <h3 <h3 class="header_font">
        Sách đã mượn
    </h3>
    <div class="d-flex flex-column">
        <div class="d-flex flex-row book_item">
            <img class="img_book" src="/images/book.jpg">
            <div class="d-flex flex-column align-content-between">
                <div class="d-flex flex-column" style="height: 160px">
                    <h5 class="header_font">Sách gì đó</h5>
                    <p class="author_name">Nguyễn Hữu Tuấn</p>
                    <p>Tiếng Việt</p>
                </div>

                <div class="d-flex flex-column">
                    <span>
                        <button type="button" class="btn btn-primary">Mượn sách</button>
                    </span>
                    <a class="read_more">Xem thêm</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#updateProfileBtn').on('click', function() {
            var input = $("input[name=username]").val();
            if (input === "") {
                alert("Field must not be empty");
                return;
            } else {
                $('#updateProfileForm').submit();
            }
        });
    });
</script>